<%- include('../includes/header', { title: 'Trainers' }) %>

<main>
    <h1>MEET OUR TRAINERS</h1>
    <div class="trainers-container">
        <% trainers.forEach(trainer => { %>
            <div class="trainer-card">
                <% if (trainer.image) { %>
                    <img src="/uploads/<%= trainer.image %>" alt="<%= trainer.name %>" class="trainer-photo">
                <% } %>
                <div class="trainer-info">
                    <h3><%= trainer.name %></h3>
                    <p><strong>Specialty:</strong> <%= trainer.specialty %></p>
                    <p><strong>Bio:</strong> <%= trainer.bio %></p>
                </div>
                <!-- Contact Button on Each Card -->
                <div class="trainer-contact-button">
                    <a href="/thankyou" class="contact-button">Contact</a>
                </div>
            </div>
        <% }) %>
    </div>
</main>

<%- include('../includes/footer') %>

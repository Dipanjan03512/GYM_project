<%- include('../includes/header', { title: 'Add Prices' }) %>

<div class="container">
    <h1>Add Membership Plan</h1>
    <form action="/admin/addPrice" method="POST" enctype="multipart/form-data">
        <div>
            <label for="type">Plan Name:</label>
            <input type="text" id="type" name="type" required>
        </div>
        <div>
            <label for="description">Description:</label>
            <textarea id="description" name="description" required></textarea>
        </div>
        <div>
            <label for="amount">Price:</label>
            <input type="number" id="amount" name="amount" required>
        </div>
        <div>
            <label for="image">Image:</label>
            <input type="file" id="image" name="image">
        </div>
        <button type="submit" class="btn">Add Plan</button>
    </form>
</div>

<%- include('../includes/footer') %>

<%- include('../includes/header', { title: 'Add Prices' }) %>

<div class="container">
    <h1>Add Membership Plan</h1>
    <form action="/admin/add-prices" method="POST">
        <div>
            <label for="plan">Plan Name:</label>
            <input type="text" id="plan" name="plan" required>
        </div>
        <div>
            <label for="description">Description:</label>
            <textarea id="description" name="description" required></textarea>
        </div>
        <div>
            <label for="price">Price:</label>
            <input type="number" id="price" name="price" required>
        </div>
        <button type="submit" class="btn">Add Plan</button>
    </form>
</div>

<%- include('../includes/footer') %>
